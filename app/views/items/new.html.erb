<% if @item.errors.any? %>
	<ul>
		<%= @item.errors.full_messages.each do |message| %>
		<% end %>
	</ul> 
<% end %>
<%= form_for @item, url: menu_items_path do |f| %>
	<% f.hidden_field :menu_id, :value => @menu.id %>
	<%= f.label :title %>
	<%= f.text_field :title %><br>

	<%=f.label :description %>
	<%= f.text_field :description %><br>

	<%=f.label :price %>
	<%=f.number_field :price, step: :any %>

	<%= f.submit %>
<% end %>