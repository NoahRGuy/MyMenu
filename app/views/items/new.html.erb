<% if @menu_item.errors.any? %>
	<ul>
		<%= @menu_item.errors.full_messages.each do |message| %>
		<% end %>
	</ul>
<% end %>
<%= form_for @menu_item do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %><br>

	<%=f.label :description %>
	<%= f.text_field :description %><br>

	<%=f.label :price %>
	<%=f.number :price %>

	<%= f.submit %>
<% end %>